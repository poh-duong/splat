<%= render("shared/tabs") %>
<div class="tab-content">
  <div id="assignment_details" class="tab-pane fade in active">
    <h2>Preview</h2>
    <%- if @assignment.instructions.present? -%>
      <%= simple_format(@assignment.instructions).html_safe %>
    <%- else -%>
      <%= "No instructions" %>
    <%- end -%>
    <%= render("assignments/active_questions") %>
    <a class="btn btn-default button-float--left" href="<%= instruction_assignments_path %>">Previous</a>
    <a class="btn btn-default button-float--right" href="<%= group_categories_path %>">Next</a>
  </div>
  <%= render("shared/no_results") %>  
</div>