<%= render("shared/tabs") %>
<div class="tab-content">
  <div id="assignment_details" class="tab-pane fade in active">
    <div class="instruction-margin--top" >
      <%- if @assignment.instructions.present? -%>
      <%= simple_format(@assignment.instructions).html_safe %>
      <%- else -%>
        <%= "No instructions" %>
      <%- end -%>
    </div>
    <%= render("assignments/active_questions") %>
  </div>
  <div id="assignment_results" class="tab-pane fade">
    <div id="results_buttons">
      <%= link_to("Export Assignment Results", export_assignments_path({ id: @assignment.id, format: :csv }), class: "btn btn-default button-float--right button-margin--right", "data-toggle": "tooltip", "data-placement": "top", title: "#{@students_completed}/#{@students_total} students completed this assignment") if instructor? session[:roles] %>
    </div>
    <%= render("assignments/inline_moderation") %>
  </div>
  <div id="administration_details" class="tab-pane fade">
      <%= render("shared/sub_tabs") %>
      <%= render("administration/all_administration") %>
  </div>
</div>


